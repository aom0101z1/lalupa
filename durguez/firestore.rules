rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Registration collection - public read/create, limited update
    match /registros_evento/{document} {
      allow read: if true;
      // Only require leaderCode and acceptedPolicy, other fields are optional based on config
      allow create: if request.resource.data.keys().hasAll([
        'leaderCode',
        'acceptedPolicy'
      ]) && request.resource.data.acceptedPolicy == true;
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['lastAccess', 'accessCount']);
    }

    // Settings collection - public read, admin write
    match /settings/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Leaders collection - public read for active codes, authenticated write
    match /lideres/{document} {
      // Anyone can read active leader codes (needed for registration validation)
      allow read: if true;

      // Only authenticated users can create/update/delete leaders
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Admins collection - authenticated read only (write via Firebase Console)
    match /admins/{document} {
      // Authenticated users can read to check their own admin status
      allow read: if request.auth != null;

      // No client-side writes - admins managed via Firebase Console only
      allow write: if false;
    }
  }
}
